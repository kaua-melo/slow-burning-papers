
#ifndef _PARTICLECHAIN1D // if this class hasn't been defined, the program can define it
#define _PARTICLECHAIN1D // by using this if statement you prevent the class to be called more than once which would confuse the compiler

#include "ofMain.h" // we need to include this to have a reference to the openFrameworks framework
#include "Particle.h"


class ParticleChain1D
{
	public:
		// first particle's position
		ofVec2f pos;

		// number of particles
		int np;

		// length of the chain
		int length;

		// distance between two particles
		int gap;

		// strength between the particles
		float str;

		// friction
		float friction;

		// weigth of the line when drawing the chain
		int weight;

		// radius of the bubble
		float r;

		// particles
		vector <shared_ptr<Particle>> p;
		
		// color
		ofColor c;


		ParticleChain1D(int x, int y, int l, int _np, float _str, float _f, float w, ofColor _c); 
		void update();
		void drawP();
		void drawL();
	private:

	
};
#endif
